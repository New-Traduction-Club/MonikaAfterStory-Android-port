<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_file_explorer"
            app:titleTextColor="?attr/colorOnPrimary"
            android:background="?attr/colorPrimary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="88dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- Bottom Action Bar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="end">

        <LinearLayout
            android:id="@+id/actionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_delete"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/action_delete"/>
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_copy" 
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/action_copy"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_cut" 
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/action_cut"/>
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_save"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/label_export"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_extract"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/action_extract"
                android:visibility="gone"/>

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Paste FAB (Visible when clipboard has items) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/bottomAppBar"
        android:src="@drawable/ic_paste"
        android:contentDescription="@string/action_paste"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
